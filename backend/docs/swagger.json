{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/scrcpy/stream/start": {
            "post": {
                "description": "为指定设备启动scrcpy流服务，返回WebSocket连接地址",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "串流管理"
                ],
                "summary": "启动设备流服务",
                "parameters": [
                    {
                        "description": "请求参数",
                        "name": "req",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/v1.StartStreamReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/v1.StartStreamRes"
                        }
                    }
                }
            }
        },
        "/scrcpy/stream/stop": {
            "post": {
                "description": "停止指定设备的scrcpy流服务",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "串流管理"
                ],
                "summary": "停止设备流服务",
                "parameters": [
                    {
                        "description": "请求参数",
                        "name": "req",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/v1.StopStreamReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/v1.StopStreamRes"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "v1.StartStreamReq": {
            "description": "启动设备流请求参数",
            "type": "object",
            "properties": {
                "deviceId": {
                    "type": "string",
                    "example": "127.0.0.1:16480"
                }
            }
        },
        "v1.StartStreamRes": {
            "description": "启动设备流响应参数",
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer",
                    "example": 8886
                },
                "url": {
                    "type": "string",
                    "example": "ws://localhost:8886"
                }
            }
        },
        "v1.StopStreamReq": {
            "description": "停止设备流请求参数",
            "type": "object",
            "properties": {
                "deviceId": {
                    "type": "string",
                    "example": "127.0.0.1:16480"
                }
            }
        },
        "v1.StopStreamRes": {
            "description": "停止设备流响应参数",
            "type": "object"
        }
    }
}