# https://goframe.org/docs/web/server-config-file-template
server:
  address:     ":8800"
  # OpenAPI配置
  openapiPath: "/api.json"
  swaggerPath: "/swagger"
  # 允许跨域
  dumpRouterMap: true
  # 禁用路由重复检测
  routeOverWrite: true

# https://goframe.org/docs/core/glog-config
logger:
  path: "./logs"
  level : "all"
  stdout: true

# https://goframe.org/docs/core/gdb-config-file
database:
  default:
    type: "sqlite"
    link: "sqlite::@file(./data/mm.db)"
    debug: true
    createdAt: "created_at"
    updatedAt: "updated_at"

# 批量操作配置
batch:
  # 最大并发数限制
  maxWorker: 50
  # 单个任务超时时间（秒）
  taskTimeout: 300
  # 任务状态保留时间（秒）
  statusKeepTime: 3600

# 截图服务配置
screenshot:
  # 缓存过期时间（秒）
  cacheTTL: 3
  # 图片质量
  quality: 80
  # 图片缩放比例
  scale: 1.0
  # 图片格式
  format: "webp"